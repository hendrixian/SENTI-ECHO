{
  "manifest_version": 3,
  "name": "SENTI-ECHO",
  "version": "1.0.0",
  "description": "A personal AI journaling and self-reflection assistant powered by Gemini Nano. Speak your thoughts, get AI-powered emotional insightsâ€”all offline and private.",
  "permissions": [
    "storage",
    "tabs",
    "webSpeechAPI"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SENTI-ECHO: Your Personal AI Journal",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html", "popup/popup.js", "popup/popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}